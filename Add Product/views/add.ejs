<%- include('menu') %>

<style>
 
  .container {
    width: 80%;
    margin: 0 auto;
    padding-top: 20px;
  }

  h1 {
    text-align: center;
    color: #333;
    font-size: 32px;
    margin-bottom: 30px;
  }

 
  form {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  input[type="text"],
  input[type="number"],
  input[type="file"] {
    width: 100%;
    max-width: 400px;
    padding: 10px;
    margin-bottom: 15px;
    border: 1px solid #ccc;
    border-radius: 5px;
    font-size: 16px;
  }

  input[type="file"] {
    padding: 5px;
  }

  button[type="submit"] {
    padding: 12px 25px;
    background-color: black;
    color: white;
    border: none;
    border-radius: 5px;
    font-size: 18px;
    cursor: pointer;
    width: 50%;
    max-width: 200px;
  }


  /* Form Layout Styling */
  form input, form button {
    width: 100%;
    margin: 5px 0;
  }
</style>

<div class="container">
  <h1>Add Product</h1>
  <form action="/productaction" method="POST" enctype="multipart/form-data">
    <input type="text" placeholder="Name" name="name" required /><br />
    <input type="number" placeholder="Price" name="price" required /><br />
    <input type="number" placeholder="Discount" name="discount" /><br />
    <input type="file" name="image" accept="image/*" required /><br />
    <button type="submit">Add Product</button>
  </form>
</div>
